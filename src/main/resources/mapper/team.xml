<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.metacoding.test.domain.team.TeamDao">



	<select id="findAll"	resultType="site.metacoding.test.web.dto.request.team.TeamListDto">
		SELECT t.id, st.name AS stadiumName, st.Id as stadiumId, t.NAME, t.createdAt  FROM team t RIGHT OUTER JOIN stadium st ON t.stadiumid = st.id
	</select>

	<insert id="insert">
		INSERT into team(stadiumId,name,createdAt) VALUES(#{stadiumId},#{name},now())
	</insert>

	<select id="findById"
		resultType="site.metacoding.test.domain.team.Team">
		SELECT * FROM team WHERE id=#{id}
	</select>

	<update id="update">
			UPDATE team SET stadiumId = #{stadiumId},name = #{name} WHERE id = #{id}
	</update>

	<delete id="deleteById">
		DELETE FROM team WHERE id = #{id}
	</delete>

</mapper>






