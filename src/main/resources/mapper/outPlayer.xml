<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.metacoding.test.domain.outPlayer.OutPlayerDao">



	<select id="findAll"	resultType="site.metacoding.test.domain.outPlayer.OutPlayer">
		SELECT * FROM OutPlayer
	</select>

	<insert id="insert">
		INSERT into OutPlayer(teamId, playerId, reason, createdAt) VALUES(#{teamId},#{playerId},#{reason},now())
	</insert>

	<select id="findById"
		resultType="site.metacoding.test.domain.outPlayer.OutPlayer">
		SELECT * FROM OutPlayer WHERE id=#{id}
	</select>

	<update id="update">
			UPDATE OutPlayer SET teamId = #{teamId},playerId = #{playerId},reason = #{reason} WHERE id = #{id}
	</update>

	<delete id="deleteById">
		DELETE FROM OutPlayer WHERE id = #{id}
	</delete>

</mapper>






